<Alert @ref="Alert" Icon="@IconString.Info" AlertCssStyle="@alertStyle"
       AlertList="ErrorList">
    <CustomTextElement>
        @if (EditContext != null && EditContext.Validate() && !ErrorList.Any())
        {
            Alert?.Close();
        }
        else if (EditContext != null && !EditContext.Validate())
        {
            <strong>Error</strong>
            <ValidationSummary />
        }
    </CustomTextElement>
</Alert>